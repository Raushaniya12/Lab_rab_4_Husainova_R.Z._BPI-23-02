<Window x:Class="Lab_rab_4_Husainova_R.Z._BPI_23_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_4_Husainova_R.Z._BPI_23_02"
        xmlns:system="clr-namespace:System.Windows;assembly=PresentationFramework" 
    mc:Ignorable="d"
        Title="Окно" Height="100" Width="355"
    Background="{DynamicResource WindowBackground}"
Foreground="{DynamicResource WindowForeground}">
    <Grid>
        <Menu>
            <MenuItem Header="Сотрудники" Command="{Binding OpenEmployeeWindow}"/>
            <MenuItem Header="Должности" Command="{Binding OpenRoleWindow}"/>
        </Menu>
        <WrapPanel HorizontalAlignment="Right">
            <Button  Content="☀️" Command="{Binding SwitchLightTheme}" Margin="5"/>
            <Button  Content=" 🌙" Command="{Binding SwitchDarkTheme}" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>
